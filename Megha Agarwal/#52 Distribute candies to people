class Solution {
public:
    vector<int> distributeCandies(int candies, int num_people) {
        vector<int> res(num_people, 0); 
        int i=0;
        while (candies > 0) 
        {
            res[i%num_people]+=i+1;
            candies-=i+1;
            i++;
        }
        if (candies < 0) 
            res[(i-1)%num_people] -= abs(candies);
        return res;
    }
};
